<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mju.zjj.mapper.CourseMapper">


    <insert id="insert">
        insert into course(id,name,hour) values(#{id},#{name},#{hour})
    </insert>
    <update id="modif">
        update course
        <set>
            <if test="name!=null">
                name=#{name},
            </if>
            <if test="hour!=null">
                hour=#{hour}
            </if>
        </set>
        where id=#{id}
    </update>
    <delete id="delete">
        delete from course where id=#{id}
    </delete>
    <select id="find" resultType="com.mju.zjj.pojo.Course">
        select * from course
        <where>
            <if test="id!=null">
                id=#{id}
            </if>
            <if test="hour!=null">
                and hour!=#{hour}
            </if>
            <if test="name!=null">
                and name!=#{name}
            </if>
        </where>
    </select>
</mapper>